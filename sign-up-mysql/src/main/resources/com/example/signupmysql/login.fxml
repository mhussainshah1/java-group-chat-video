<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
      fx:controller="com.example.signupmysql.LoginController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="256.0" style="-fx-background-color: #FED700;">
            <children>
                <Label layoutX="47.0" layoutY="217.0" text="(555) - 555 - 5555">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="30.0" layoutY="30.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../../wittcode-logo.png"/>
                    </image>
                </ImageView>
                <Label layoutX="19.0" layoutY="279.0" text="WittCode@support.com">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="400.0" prefWidth="347.0">
            <children>
                <ImageView fitHeight="89.0" fitWidth="86.0" layoutX="151.0" layoutY="46.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../../lock-logo.png"/>
                    </image>
                </ImageView>
                <Label layoutX="12.0" layoutY="177.0" text="Username">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="248.0" text="Password">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="tf_username" layoutX="113.0" layoutY="176.0" onAction="#txtHandler"
                           promptText="Username">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </TextField>
                <TextField fx:id="tf_password" layoutX="112.0" layoutY="241.0" onAction="#txtHandler"
                           promptText="Password">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </TextField>
                <Button fx:id="button_login" layoutX="100.0" layoutY="311.0" mnemonicParsing="false"
                        onAction="#btnHandler" prefHeight="35.0" prefWidth="174.0"
                        style="-fx-background-color: #FED700;" text="Login">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0"/>
                    </font>
                </Button>
                <Label layoutX="101.0" layoutY="366.0" text="Not a user?">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0"/>
                    </font>
                </Label>
                <Button fx:id="button_sign_up" layoutX="199.0" layoutY="362.0" mnemonicParsing="false"
                        onAction="#btnHandler" style="-fx-background-color: transparent; -fx-cursor: hand;"
                        text="Sign up!" textFill="#110eed" underline="true">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</HBox>
